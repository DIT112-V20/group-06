<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageButton
        android:id="@+id/shakeButton"
        android:layout_width="117dp"
        android:layout_height="106dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="41dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="shakeActiveDance"
        android:rotation="90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twoStepButton"
        app:srcCompat="@drawable/selectable_button_cropped" />

    <ImageButton
        android:id="@+id/twoStepButton"
        android:layout_width="117dp"
        android:layout_height="106dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="twoStepActiveDance"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseADanceText"
        app:srcCompat="@drawable/selectable_button_cropped" />

    <ImageButton
        android:id="@+id/spinButton"
        android:layout_width="117dp"
        android:layout_height="106dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="spinActiveDance"
        android:rotation="270"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseADanceText"
        app:srcCompat="@drawable/selectable_button_cropped" />

    <ImageButton
        android:id="@+id/macarenaButton"
        android:layout_width="117dp"
        android:layout_height="106dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="macarenaActiveDance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinButton"
        app:srcCompat="@drawable/selectable_button_cropped" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/start_button"
        android:onClick="startDancing"
        android:text="Start"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="normal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/randomButton"
        android:layout_width="148dp"
        android:layout_height="138dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="105dp"
        android:background="@drawable/random_button"
        android:elevation="2dp"
        android:onClick="activeRandomButton"
        android:text="Random"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseADanceText" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/stop_button"
        android:onClick="stopDancing"
        android:text="Stop"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="normal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/twoStepText"
        android:layout_width="85dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="57dp"
        android:ems="10"
        android:text="Two-step"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/twoStepButton"
        app:layout_constraintEnd_toEndOf="@+id/twoStepButton"
        app:layout_constraintStart_toStartOf="@+id/twoStepButton"
        app:layout_constraintTop_toTopOf="@+id/twoStepButton" />

    <TextView
        android:id="@+id/spinText"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="67dp"
        android:ems="10"
        android:text="Spin"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinButton"
        app:layout_constraintEnd_toEndOf="@+id/spinButton" />

    <TextView
        android:id="@+id/shakeText"
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:text="Shake"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shakeButton"
        app:layout_constraintTop_toTopOf="@+id/shakeButton" />

    <TextView
        android:id="@+id/macarenaText"
        android:layout_width="91dp"
        android:layout_height="39dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:text="Macarena"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/macarenaButton"
        app:layout_constraintTop_toTopOf="@+id/macarenaButton" />

    <TextView
        android:id="@+id/chooseADanceText"
        android:layout_width="269dp"
        android:layout_height="41dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:text="Choose A Dance Move"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/houseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_button"
        android:onClick="goHome"/>




</androidx.constraintlayout.widget.ConstraintLayout>