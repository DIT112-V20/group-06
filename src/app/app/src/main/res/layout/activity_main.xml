<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.MainActivity">

    <ImageButton
        android:id="@+id/shakeButton"
        android:layout_width="117dp"
        android:layout_height="106dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="41dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:onClick="activeButton"
        android:rotation="90"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/twoStepButton"
        app:srcCompat="@drawable/selectable_button_cropped" />

    <ImageButton
        android:id="@+id/twoStepButton"
        android:layout_width="117dp"
        android:layout_height="106dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:onClick="activeButton"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/chooseADanceText"
        app:srcCompat="@drawable/selectable_button_cropped" />

    <ImageButton
        android:id="@+id/spinButton"
        android:layout_width="117dp"
        android:layout_height="106dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:onClick="activeButton"
        android:rotation="270"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/chooseADanceText"
        app:srcCompat="@drawable/selectable_button_cropped" />

    <ImageButton
        android:id="@+id/macarenaButton"
        android:layout_width="117dp"
        android:layout_height="106dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:onClick="activeButton"
        app:layout_constraintBottom_toTopOf="@+id/stopButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/spinButton"
        app:srcCompat="@drawable/selectable_button_cropped" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/start_button"
        android:clickable="true"
        android:onClick="startDancing"
        android:text="Start"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="normal"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <ImageButton
        android:id="@+id/randomDanceButton"
        android:layout_width="154dp"
        android:layout_height="151dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="115dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:elevation="2dp"
        android:fadingEdge="none"
        android:foregroundTint="#FFFFFF"
        android:onClick="activeButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/chooseADanceText"
        app:srcCompat="@drawable/selectable_random_button" />


    <Button
        android:id="@+id/stopButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/stop_button"
        android:clickable="true"
        android:onClick="stopDancing"
        android:text="Stop"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="normal"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/twoStepText"
        android:layout_width="85dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="57dp"
        android:ems="10"
        android:text="Two-step"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/twoStepButton"
        app:layout_constraintEnd_toEndOf="@+id/twoStepButton"
        app:layout_constraintStart_toStartOf="@+id/twoStepButton"
        app:layout_constraintTop_toTopOf="@+id/twoStepButton" />

    <TextView
        android:id="@+id/spinText"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="67dp"
        android:ems="10"
        android:text="Spin"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinButton"
        app:layout_constraintEnd_toEndOf="@+id/spinButton" />

    <TextView
        android:id="@+id/shakeText"
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:text="Shake"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shakeButton"
        app:layout_constraintTop_toTopOf="@+id/shakeButton" />

    <TextView
        android:id="@+id/macarenaText"
        android:layout_width="91dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:text="Macarena"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/macarenaButton"
        app:layout_constraintTop_toTopOf="@+id/macarenaButton" />

    <TextView
        android:id="@+id/chooseADanceText"
        android:layout_width="269dp"
        android:layout_height="41dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:text="Choose A Dance Move"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <ImageButton
        android:id="@+id/houseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:onClick="goHome"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@drawable/home_button" />

    <TextView
        android:id="@+id/randomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="60dp"
        android:elevation="3dp"
        android:text="Random"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/randomDanceButton"
        app:layout_constraintEnd_toEndOf="@+id/randomDanceButton"
        app:layout_constraintStart_toStartOf="@+id/randomDanceButton"
        app:layout_constraintTop_toTopOf="@+id/randomDanceButton" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04103967" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04136253" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96107054" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />


</androidx.constraintlayout.widget.ConstraintLayout>