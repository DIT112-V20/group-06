<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <!--android:text="Hello World!" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/random_button"
        android:onClick="getDance"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/dance_one"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/dance_one"
        android:onClick="getDance"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/dance_two"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/dance_two"
        android:onClick="getDance"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/dance_three"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/dance_three"
        android:onClick="getDance"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/dance_four"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/dance_four"
        android:onClick="getDance"
        tools:ignore="MissingConstraints" />

</LinearLayout>